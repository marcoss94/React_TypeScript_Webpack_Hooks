{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "sourceMap": true,
      "module": "es6",
      "lib": [
        "DOM",
        "DOM.Iterable",
        "ESNext"
      ],
      "target": "es5",
      "jsx": "react",
      "allowJs": true,
      "moduleResolution": "node",
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "allowSyntheticDefaultImports": true, 
      "baseUrl": "src",
        "paths": {
            "asset": ["asset"],
            "commons": ["commons"],
            "components": ["components"],
            "config": ["config"],
            "context": ["context"],
            "hooks": ["hooks"],
            "pages": ["pages"]
        }

    },
    "exclude": [
      "node_modules",
      "webpack.config.js"
  ]
  
  }